<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <FrameLayout
        android:id="@+id/parentFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".mapScreen.MapFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <fragment
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                />
            <!--androidx.fragment.app.FragmentContainerView
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" /-->

            <TextView
                android:id="@+id/txtDistance"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="8dp"
                android:gravity="center"
                android:visibility="gone"
                tools:visibility="visible"
                android:lines="2"
                android:textColor="@color/material_dynamic_tertiary100"
                android:background="@drawable/map_items_background_circle"
                android:padding="10dp"
                android:text='@{@string/distance("0.0")}'
                tools:text="Distancia: 124 kms"
                android:textSize="24sp"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toStartOf="@+id/txtTime"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtTime"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="8dp"
                android:gravity="center"
                android:visibility="gone"
                tools:visibility="visible"
                android:lines="2"
                android:text='@{@string/timeData("00:00:00")}'
                android:textColor="@color/material_dynamic_tertiary100"
                tools:text="Tiempo: 00:00:00"
                android:padding="10dp"
                android:background="@drawable/map_items_background_circle"
                android:textSize="24sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/txtDistance"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/txtDistance" />

            <TextView
                android:id="@+id/txtDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:visibility="gone"
                android:padding="8dp"
                android:background="@drawable/map_items_background"
                android:textSize="16sp"
                tools:text="Date 09/09/2021"
                android:layout_marginBottom="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/txtSpeed"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="8dp"
                android:gravity="center"
                android:visibility="gone"
                tools:visibility="visible"
                android:lines="2"
                android:padding="8dp"
                android:background="@drawable/map_items_background_circle"
                android:text='@{@string/speed("0.0")}'
                android:textSize="24sp"
                android:textColor="@color/material_dynamic_tertiary100"
                tools:text="Velocidad: 18km/h"
                android:layout_marginBottom="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:background="@color/colorPrimary"
            android:backgroundTint="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/fab_margin"
            android:src="@drawable/walk"
            />
    </FrameLayout>
</layout>